<link rel="stylesheet" href="/stylesheets/views.css">
<h1 class="center">Welcome, <%= @user.username %>!</h1><br>


<h2>Your Pets</h2>
<% current_user.pets.each do |pet| %>
  <ul>
  <% pet.attributes.each do |pet_attribute, attribute_value| %>
    <%if pet_attribute != "user_id" && pet_attribute != "id"%>
      <li><strong class="attribute-color"><%= pet_attribute.capitalize %>:</strong> <%= attribute_value.presence || "N/A"%></li>
    <%end%>
  <% end %>
  <form action="/pets/<%=pet["id"]%>" method="GET">
    <input type="submit" value="View">
  </form><br>
  </ul>
<%end%>
<p>Click <a href="/pets/new">here</a> to add pet</p>