
<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<h1>Welcome back, <%= @user.username %>!<br>

<h3>Your Pets</h3>
<% @user.pets.each do |pet_obj| %>
  <ul>
    <input type="checkbox" name="user[pet]" value="<% checked if pet_obj.user_id == current_user.id %>">
    <li>Name: <%= pet_obj.name %></li>
    <li>Age: <%= pet_obj.age %></li>
    <li>Breed: <%= pet_obj.breed%></li><br>
  </ul>
<% end %>

<h3>Add Pet</h3>
<form action="/pets/new" method="POST">
  <label>Pet Name:</label>
  <input type="text" name="name">
  <label>Age:</label>
  <input type="text" name="age">
  <label>Breed:</label>
  <input type="text" name="breed">
  <label>Sex:</label>
  <input type="text" name="gender">
  <input type="submit" value="Add Pet">
</form>

