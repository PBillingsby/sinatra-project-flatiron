<link rel="stylesheet" href="/stylesheets/views.css">
<% if flash.has?(:message) %>
  <h3><%= flash[:message] %></h3>
<% end %>

<h1>Welcome, <%= @user.username %>!<br>

<h2>Your Pets</h2>
<% list_user_pets %>
  <ul>
  <% @new_obj.each do |pet_attribute, attribute_value| %>
    <li><strong><%= pet_attribute %>:</strong> <%= attribute_value %></li>
  <% end %>
  </ul>
<h3>Click <a href="/pets/new">here</a> to add pet</h3>